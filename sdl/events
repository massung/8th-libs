\ union event type
packed-rec: SDL_Event
    "56b" field: data
packed-rec;

\ common event
packed-rec: SDL_CommonEvent
    "i" field: type
    "i" field: timestamp
packed-rec;

\ display event
packed-rec: SDL_DisplayEvent
    "i" field: type
    "i" field: timestamp
    "i" field: display
    "B" field: event
    "B" field: padding1
    "B" field: padding2
    "B" field: padding3
    "i" field: data1
packed-rec;

