\ -*- 8th -*-

needs glib/glib

\ define actions
glib:action: quit

\ called once per frame to update game
: step \ --
    quit glib:pressed if glib:quit then ;

\ entry point
: app:main \ --
    glib:glib-init

    \ set callbacks
    ' step w:is glib:step

    \ create action bindings
    sdl:SDLK_ESCAPE ' quit glib:bind-key

    \ run the example then quit
    { "title" : "Glib Example 1" } glib:run bye ;
