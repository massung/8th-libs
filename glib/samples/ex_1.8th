\ -*- 8th -*-

requires glib

\ define actions
glib:action: quit

\ entry point
: app:main \ --
    { "title" : "Glib Example 1 - Basics" } glib:init

    \ create action bindings
    sdl:SDLK_ESCAPE quit glib:bind-key

    \ if the action occurs, then signal quit
    ( quit glib:pressed if glib:quit then ) w:is glib:step

    \ main loop
    glib:run-loop ;
